<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.newCart.NewCartActivity"
    >


    <EditText
        android:id="@+id/edit_cart_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="Název košíku"
        android:inputType="text"/>

    <EditText
        android:id="@+id/edit_cart_shopDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="Datum nákpu"
        android:inputType="date" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="Obchod:" android:textColor="@color/black" />

    <Spinner
        android:id="@+id/edit_cart_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>