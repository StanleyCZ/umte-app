<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">


            <TextView
                android:id="@+id/basketItem_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Nazev kosiku" />
            <TextView
                android:id="@+id/basketItem_shopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/basketItem_name"
                android:text="Nazev obchodu"/>

            <TextView
                android:id="@+id/basketItem_shoppingUncomplete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nákup nedokončen"
                android:textColor="@android:color/holo_red_dark"
                android:layout_below="@+id/basketItem_shopName"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/basketItem_productCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="12"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="položek" />

            </LinearLayout>
        </RelativeLayout>





</androidx.cardview.widget.CardView>